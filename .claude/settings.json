{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "afplay",
      "mcp__context7"
    ],
    "deny": [
      "Bash(rm:*)"
    ]
    /*"defaultMode": "acceptEdits"*/
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay ./.claude/sounds/finish.mp3"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay ./.claude/sounds/need-human.mp3"
          }
        ]
      }
    ]
  }
}